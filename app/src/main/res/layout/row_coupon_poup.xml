<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ln1_row_couponPopup"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#F3DFC2"
            android:orientation="vertical">
            <com.rockchipme.app.custom.TextViewCustom
                android:id="@+id/tv_couponTitle"
                android:layout_marginTop="5dp"
                android:textSize="13sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NEWYEAR OFFER"
                android:gravity="center"/>
            <com.rockchipme.app.custom.TextViewCustom
                android:id="@+id/tv_couponOff"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="10 % off"
                android:textAllCaps="true"
                android:gravity="center"/>



        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln2_row_couponPopup"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#FAEFE1">

            <com.rockchipme.app.custom.ButtonCustom
                android:id="@+id/btn_couponApply"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:text="Apply"
                android:background="@color/red_dark"
                android:textColor="@color/white"
                android:textAllCaps="false"/>

        </LinearLayout>

    </LinearLayout>


    <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/white" />



</LinearLayout>