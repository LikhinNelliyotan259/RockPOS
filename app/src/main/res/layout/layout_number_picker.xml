<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="2"
    android:background="@drawable/rectangle"
    android:gravity="center"
    android:baselineAligned="false">
    <FrameLayout
        android:id="@+id/flRemove"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingRight="3dp"
        android:paddingLeft="10dp">
        <ImageView
            android:id="@+id/iv_remove_cart"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/minus_arrow"
            android:layout_gravity="right"/>

    </FrameLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center">

        <com.rockchipme.app.custom.TextViewCustom
            android:id="@+id/tv_items_cartCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="99"
            android:textColor="@color/black"
            android:textStyle="bold"/>
    </RelativeLayout>


    <FrameLayout
        android:id="@+id/flAdd"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingLeft="3dp"
        android:paddingRight="10dp">
        <ImageView
            android:id="@+id/iv_addToCart"
            android:layout_gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/plus_arrow" />
    </FrameLayout>
</LinearLayout>
