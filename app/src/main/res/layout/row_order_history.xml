                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_label_order_placed"
                    android:text="Delivery Date: "
                    android:textSize="13sp"
                    app:customFont="Montserrat_Regular_2.otf" />

                <com.rockchipme.app.custom.TextViewCustom
                    android:id="@+id/tv_order_dispatched_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/tv_label_order_dispatched"
                    android:layout_toRightOf="@id/tv_label_order_dispatched"
                    android:text="17 Sept 2017"
                    android:textSize="13sp"
