                    android:layout_below="@id/tv_order_history_price"
                    android:text="Ordered Date: "
                    android:textSize="13sp"
                    app:customFont="Montserrat_Regular_2.otf" />

                <com.rockchipme.app.custom.TextViewCustom
                    android:id="@+id/tv_order_placed_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/tv_label_order_placed"
                    android:layout_toRightOf="@id/tv_label_order_placed"
