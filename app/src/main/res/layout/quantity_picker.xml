<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle"
    android:gravity="center"
    android:baselineAligned="false">
    <FrameLayout
        android:id="@+id/flDecrement"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingRight="2dp"
        android:paddingLeft="7.5dp">
        <ImageView
            android:id="@+id/iv_remove_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@drawable/minus_arrow"
            android:layout_gravity="right|center"/>

    </FrameLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:minWidth="27dp"
        android:gravity="center"
        android:padding="2dp">

        <com.rockchipme.app.custom.TextViewCustom
            android:id="@+id/tvDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="000"
            android:maxLength="3"
            android:textColor="@color/black"
            android:textStyle="bold"/>
    </RelativeLayout>


    <FrameLayout
        android:id="@+id/flIncrement"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingLeft="2dp"
        android:paddingRight="7.5dp">
        <ImageView
            android:id="@+id/iv_addToCart"
            android:layout_gravity="left|center"
            android:layout_width="match_parent"
            android:scaleType="centerInside"
            android:layout_height="wrap_content"
            android:src="@drawable/plus_arrow" />
    </FrameLayout>
</LinearLayout>
