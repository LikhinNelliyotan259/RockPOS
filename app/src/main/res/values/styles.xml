        <!--<item name="colorControlNormal">@color/white</item>-->
        <!--<item name="colorControlActivated">@color/accent</item>-->
    <!--</style>-->


    <style name="TextLabeForAddress" parent="Widget.Design.TextInputLayout">
        <!--<item name="android:textColorHint">@color/white</item>-->
        <item name="colorAccent">@color/red_dark</item>
        <!--<item name="colorControlNormal">@color/white</item>-->
        <!--<item name="android:textStyle">bold</item>-->
        <item name="colorControlActivated">@color/red_dark</item>
    </style>

    <style name="TextLabel" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">@color/white</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/accent</item>
    </style>
    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/red_light</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="TextLabelNew" parent="Widget.Design.TextInputLayout">
    </style>

    <style name="MyMaterialTheme.Basenew" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/gray_status_bar</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="BrandButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/pink</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SwipeLayout">
        <item name="android:paddingBottom">1px</item>
        <item name="android:background">#e5e5e5</item>
    </style>

    <style name="CenterTextView">
        <item name="android:padding">6dp</item>
        <item name="android:textColor">@color/center_text</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="RightTextView">
        <item name="android:padding">6dp</item>
        <item name="android:textColor">@color/right_text</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="LeftTextView">
        <item name="android:padding">6dp</item>
        <item name="android:textColor">@color/left_text</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="popup_window_animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom2</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom2</item>
        <item name="android:popupBackground">@android:color/white</item>
    </style>
</resources>
